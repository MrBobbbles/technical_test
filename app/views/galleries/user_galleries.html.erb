<h1>My Galleries</h1>

<div class="button-container">
<%= link_to "Create Gallery", new_gallery_path, class: "btn new-gallery" %>
</div>

<div class="galleries-container">
  <% if @galleries.any? %>
    <% @galleries.each do |gallery| %>
      <div class="gallery-container">
        <h2 class= "gallery-title"><%= gallery.name %> </h2>
          <p class="gallery-description"><%= gallery.description || "no description" %></p>
        <%= link_to "View", gallery, class: "btn view-gallery"%>
      </div>
    <% end %>
  <% else %>
    <p>You haven't created any galleries yet. Click 'Create Gallery' to get started!</p>
  <% end %>
</div>